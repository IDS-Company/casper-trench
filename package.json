	"dependencies": {
		"@zerodevx/svelte-toast": "^0.7.2",
		"axios": "^0.27.2",
		"browserify": "^17.0.0",
		"bufferutil": "^4.0.6",
		"casper-js-sdk": "^2.9.1",
		"coingecko-api": "^1.0.10",
		"ethers": "^5.6.9",
		"secp256k1": "^4.0.3",
		"utf-8-validate": "^5.0.9"
